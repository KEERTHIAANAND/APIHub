# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
# For local: mongodb://localhost:27017/apihub
# For Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/apihub
MONGODB_URI=mongodb://localhost:27017/apihub

# JWT Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRE=7d

# Firebase Admin SDK
# Download from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Save the file as firebase-service-account.json in server/config/
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173
